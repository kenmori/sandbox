{
  "compilerOptions": {
      "target": "esnext",
      "baseUrl": "./src",
      "jsx": "react",
      "allowSyntheticDefaultImports": true,
      "allowUnreachableCode": true,
      "allowJs": true,
      "moduleResolution": "node",
      "module": "es2015",
      "experimentalDecorators": true,
      "lib": ["es2015", "dom"],
      "typeRoots" : ["./typings/modules", "./node_modules/@types"]
  },
  "include": [
      "./src/**/*.ts",
      "./src/**/*.tsx",
      "./src/**/*.js",
      "./src/**/*.jsx"
  ]
}
